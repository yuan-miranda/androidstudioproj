<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tapButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/roundbutton_light"
        android:text="TAP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/primogemDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/tapButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />

    <Button
        android:id="@+id/heroBtn"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:text="hero"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/wishBtn"
        app:layout_constraintEnd_toStartOf="@+id/wishBtn"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toTopOf="@+id/wishBtn" />

    <Button
        android:id="@+id/wishBtn"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginEnd="52dp"
        android:text="wish"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556" />

    <ImageButton
        android:id="@+id/chSlot4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tapButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chSlot3"
        app:layout_constraintTop_toBottomOf="@+id/heroBtn"
        app:layout_constraintVertical_bias="0.147"
        app:srcCompat="@drawable/duwud" />

    <ImageButton
        android:id="@+id/chSlot1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tapButton"
        app:layout_constraintEnd_toStartOf="@+id/chSlot2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroBtn"
        app:layout_constraintVertical_bias="0.147"
        app:srcCompat="@drawable/duwud" />

    <ImageButton
        android:id="@+id/chSlot2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tapButton"
        app:layout_constraintEnd_toStartOf="@+id/chSlot3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chSlot1"
        app:layout_constraintTop_toBottomOf="@+id/heroBtn"
        app:layout_constraintVertical_bias="0.147"
        app:srcCompat="@drawable/duwud" />

    <ImageButton
        android:id="@+id/chSlot3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tapButton"
        app:layout_constraintEnd_toStartOf="@+id/chSlot4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chSlot2"
        app:layout_constraintTop_toBottomOf="@+id/heroBtn"
        app:layout_constraintVertical_bias="0.147"
        app:srcCompat="@drawable/duwud" />

    <TextView
        android:id="@+id/chLvlSlot1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="lv.0"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chLvlSlot2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chSlot1" />

    <TextView
        android:id="@+id/chLvlSlot2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="lv.0"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chLvlSlot3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chLvlSlot1"
        app:layout_constraintTop_toBottomOf="@+id/chSlot2" />

    <TextView
        android:id="@+id/chLvlSlot3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="lv.0"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chLvlSlot4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chLvlSlot2"
        app:layout_constraintTop_toBottomOf="@+id/chSlot3" />

    <TextView
        android:id="@+id/chLvlSlot4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="lv.0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chLvlSlot3"
        app:layout_constraintTop_toBottomOf="@+id/chSlot4" />

</androidx.constraintlayout.widget.ConstraintLayout>